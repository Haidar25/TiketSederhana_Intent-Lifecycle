<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="5"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_jumlahsaldo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="Jumlah Saldo"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:weightSum="2">

        <TextView
            android:id="@+id/txtview_saldo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textview_topup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Top Up"
            android:textAlignment="textEnd"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="2"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        android:padding="15dp"
        android:weightSum="10">

        <TextView
            android:id="@+id/txtview_tujuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Tujuan"
            android:textSize="20sp"
            android:textStyle="bold" />

     <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

        <TextView
            android:id="@+id/txtviewkeberangkatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Keberangkatan"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_pilih_tanggal_berangkat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pilih Tanggal"
            android:textColor="@color/colorAccent"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textview_pilih_waktu_berangkat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Pilih Waktu"
            android:textColor="@color/colorAccent"
            android:textSize="15sp" />

     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="8">

     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:text="Pulang Pergi"
        android:textSize="15sp" />

     <Switch
        android:id="@+id/sw_pulangpergi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="3" />

     </LinearLayout>

        <TextView
            android:id="@+id/textview_pilih_tanggal_pulang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pilih Tanggal"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/textview_pilih_waktu_pulang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pilih Waktu"
            android:textColor="@color/colorAccent"
            android:textSize="15sp"
            android:visibility="invisible" />

         <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Jumlah Tiket"
            android:textSize="20sp"
            android:textStyle="bold" />

         <EditText
            android:id="@+id/edit_jumlahtiket"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="0"
            android:inputType="number"
            android:text="1"
            android:textColor="@color/colorAccent" />

    </LinearLayout>

         <TextView
          android:id="@+id/textview_terima_kasih"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:gravity="center"
          android:text="Terima Kasih Yaa! Semoga selamat sampai tujuan."
          android:visibility="invisible" />

        <Button
          android:id="@+id/button_belitiket"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:layout_weight="0"
          android:text="BELI TIKET" />

</LinearLayout>