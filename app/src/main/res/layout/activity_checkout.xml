<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    android:weightSum="10"
    tools:context=".Checkout">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:gravity="center"
        android:text="SUMMARY"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:gravity="center"
        android:orientation="vertical">

     <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="Tujuan"
        android:textSize="30sp"
        android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_tujuan_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="null"
            android:textSize="25sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tanggal Keberangkatan"
        android:textSize="30sp"
        android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_tanggal_berangkat_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="null"
            android:textSize="25sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tanggal Pulang"
        android:textSize="30sp"
        android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_tanggal_pulang_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="null"
            android:textSize="25sp" />

    <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Jumlah Tiket"
       android:textSize="30sp"
       android:textStyle="bold" />

        <TextView
            android:id="@+id/textview_jumlah_tiket_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="null"
            android:textSize="25sp" />

    </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_weight="0"
       android:gravity="center"
       android:orientation="horizontal"
       android:weightSum="2">

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_weight="1"
       android:text="Harga Total"
       android:textSize="25sp" />

       <TextView
           android:id="@+id/textview_harga_total_summary"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:text="null"
           android:textSize="25sp" />

    </LinearLayout>

    <Button
        android:id="@+id/button_konfirmasi"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight="0"
        android:text="Konfirmasi Pembayaran" />

</LinearLayout>